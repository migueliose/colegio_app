# Django Production .gitignore

# Python
__pycache__/
*.py[cod]
*.pyo
*.pyd

# Database
db.sqlite3
*.sqlite3

# Environment secrets
.env
.env.production
.env.secret

# Virtual environment
venv/
.venv/
env/

# Static files (generated by collectstatic)
staticfiles/

# Media files (user uploaded)
media/

# Logs
*.log
logs/

# IDE
.vscode/
.idea/
*.swp
*.swo

# OS
.DS_Store
Thumbs.db

# Backups
*.bak
backup/
backups/

# Cache
.cache/
.pytest_cache/
.mypy_cache/

# Coverage
.coverage
.coverage.*
htmlcov/

# Translations
*.mo

# Celery
celerybeat-schedule.*

# Docker (optional)
docker-compose.override.yml

# SSL certificates (never commit these)
*.pem
*.key
*.crt

# ============================================
# IMPORTANT: DO NOT IGNORE THESE
# ============================================

# Example environment file (SHOULD be committed)
!.env.example

# Django migrations (SHOULD be committed)
!*/migrations/
!*/migrations/*.py

# Requirements files (SHOULD be committed)
!requirements.txt
!requirements/

# Django settings (SHOULD be committed)
!settings/
!settings/*.py"tmp/" 
".htaccess-old" 
